{
  "name": "learn-web",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "brs": "browser-sync start --server \"dist\" --files \"**/*\"",
    "format": "prettier --write ./src/**/*",
    "csssort": "postcss ./src/**/*.scss --replace --config package.json --no-map",
    "cssprefix": "postcss ./dist/**/*.css --replace --use autoprefixer --config package.json --no-map",
    "prod": "npm run csssort && npm run build && npm run cssprefix"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "css-declaration-sorter": "^6.3.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "vite": "^3.0.2"
  },
  "postcss": {
    "syntax": "postcss-scss",
    "map": false,
    "plugins": {
      "css-declaration-sorter": {
        "order": "smacss"
      }
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1"
  }
}
